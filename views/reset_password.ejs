<div style="text-align: center;">
    <h1>Reset Password</h1>
<% if(access) { %>
    <form action="/users/update-password/<%= accessToken %>" method="POST">
        <div>
        <label for="newPass">New Password:</label>
        <input type="password" id="newPass" name="newPass" required style="
        width: 300px;
        height: 43px;
        border-radius: 5px;
    ">
    </div>
        <br>
        <div>
        <label for="confirmPass">Confirm New Password:</label>
        <input type="password" id="confirmPass" name="confirmPass" required style="
        width: 300px;
        height: 43px;
        border-radius: 5px;
    ">
    </div>
        <div>
            <input type="submit" value="Confirm" style="
            width: 80px;
            height: 43px;
            border-radius: 5px;
        ">
        </div>
    </form>
<% } else { %>
    <p>Enter registered mail address:</p>
    <form action="/users/send-reset-pass-mail" method="POST">
        <input type="email" name="email" placeholder="Email" required style="
        width: 300px;
        height: 43px;
        border-radius: 5px;
    ">
        <input type="submit" value="Submit" style="
        width: 80px;
        height: 43px;
        border-radius: 5px;
    ">
    </form>
<% } %>
</div>